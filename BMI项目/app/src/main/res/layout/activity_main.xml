<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@mipmap/green">
    <!--标题-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:text="体重指数计数器"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_gravity="center"
        android:textSize="40sp"
        />
    <TextView android:text="Welcome to use BMI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textColor="#ff00aa00"
        android:textStyle="bold"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="10dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="20dp"/>

        <!--身高输入-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="身高："
            android:textSize="30sp"
            android:textColor="#000000"
            android:layout_marginBottom="10dp">
        </TextView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <EditText android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Please input your height"
            android:background="@drawable/tv_border"
            android:inputType="number"
            android:id="@+id/height"
            android:textSize="25sp"
            android:ems="10"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"></EditText>

        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="cm"
            android:textColor="#000000"
            android:textSize="30sp"
            android:layout_marginBottom="40dp"></TextView>
            </LinearLayout>

        <!--体重输入-->
        <TextView android:text="体重："
            android:textSize="30sp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_marginBottom="10dp">
        </TextView>
        <LinearLayout android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <EditText android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Please input your weight"
            android:background="@drawable/tv_border"
            android:inputType="number"
            android:id="@+id/weight"
            android:textSize="25sp"
            android:ems="10"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"></EditText>
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="kg"
            android:textColor="#000000"
            android:textSize="30sp"
            android:layout_marginBottom="40dp"></TextView>
            </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"/>

        <Button
            android:text="关于"
            android:textColor="#000000"
            android:textSize="21dp"
            android:textStyle="bold"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/btn_selector"
            android:id="@+id/btn">
        </Button>

        <Button android:text="计算BMI"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold"
            android:id="@+id/submit"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/btn_selector">
        </Button>

        <Button android:text="CLEAR"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold"
            android:id="@+id/bt_clear"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:background="@drawable/btn_selector">
        </Button>
        </LinearLayout>

    <TextView android:text=""
        android:id="@+id/result"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="#000000"
        android:textSize="20dp"
        android:layout_marginBottom="10dp">
    </TextView>

    <TextView android:text=""
        android:id="@+id/suggest"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="#ff0000"
        android:textSize="20dp">
    </TextView>
</LinearLayout>